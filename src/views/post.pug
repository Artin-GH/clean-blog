doctype html
html(lang='en')

  head

    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description' content='')
    meta(name='author' content='')

    title Clean Blog - (Project - X)

    link(rel='icon' type='image/x-icon' href='assets/favicon.ico')

    include _includes/css.pug

  body

    include _includes/navbar.pug

    header.masthead(style=`background-image: url('${post.pictureUrl}')`)
      .container.position-relative.px-4.px-lg-5
        .row.gx-4.gx-lg-5.justify-content-center
          .col-md-10.col-lg-8.col-xl-7
            .post-heading
              h1= post.title
              h2.subheading= post.subtitle
              span.meta
                | Posted by 
                a(href='/').link-info Clean Blog 
                | on #{formatDate(post.date)}

    article.mb-4
      .container.px-4.px-lg-5
        .row.gx-4.gx-lg-5.justify-content-center
          .col-md-10.col-lg-8.col-xl-7= post.content

    include _includes/footer.pug

    include _includes/scripts.pug